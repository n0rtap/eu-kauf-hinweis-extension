{
  "manifest_version": 3,
  "name": "EU Purchase Reminder",
  "version": "1.0.0",
  "description": "Reminds you to consider EU alternatives when visiting US websites.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "EU Purchase Reminder Settings"
  }
}
